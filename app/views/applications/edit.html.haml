.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", applications_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_application_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_application_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Application
    .inner
      = form_for @application, :url => application_path(@application), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')

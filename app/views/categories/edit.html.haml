.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "Wszystkie kategorie", categories_path
      %li= link_to "Nowa kategoria", new_category_path
      %li.active= link_to "Edytuj", edit_category_path
  .content
    %h2.title
      Edycja kategorii
    .inner
      = form_for @category, :url => category_path(@category), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- #content_for :sidebar, render(:partial => 'sidebar')

.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", categories_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_category_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", category_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.category.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @category.name
      %p
        %b
          = t("activerecord.attributes.category.color", :default => t("activerecord.labels.color", :default => "Color"))
          \:
        = @category.color
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_category_path(@category), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), category_path(@category), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')

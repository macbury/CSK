#box
	.block#block-login
		%h2 Logowanie
		.content.login
			.flash
				- flash.each do |type, message|
					%div{:class => "message #{type}"}
						%p= message
			= form_for @session, :url => session_path, :html => { :class => "form login" } do |f|
				.group.wat-cf
					.left
						= f.label :username, "E-Mail", :class => "label right"
					.right
						= f.text_field :username, :class => "text_field"
				.group.wat-cf
					.left
						= f.label :password, "HasÅ‚o", :class => "label right"
					.right
						= f.password_field :password, :class => "text_field"
				.group.navform.wat-cf
					.right
						%button.button{ :type => "submit" }
							= image_tag  "web-app-theme/icons/key.png"
